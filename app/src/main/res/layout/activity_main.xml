<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ybr.huge.helloandroid.MainActivity">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/building" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/u2" />


    <TableLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="#90ffffff">

        <TableRow>
            <TextView
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="right"
                android:text="2465 Latham St"
                android:textSize="21sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:id="@+id/address_text"
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="right"
                android:text="Mountain View,"
                android:textSize="21sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:padding="0dip"
                android:src="@drawable/location"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_toRightOf="@id/address_text"/>
        </TableRow>

        <TableRow>
            <TextView
                android:layout_centerHorizontal="true"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="right"
                android:text="CA 94043"
                android:textSize="21sp"/>
        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/tablelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#90ffffff">

        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:padding="0dip"
                android:src="@drawable/stock"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_toLeftOf="@id/phone_text"/>
            <TextView
                android:id="@+id/name_text"
                android:layout_centerHorizontal="true"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="left"
                android:text="Udacity"
                android:textSize="21sp"/>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:padding="0dp"
                android:src="@drawable/phone"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_toLeftOf="@id/phone_text"/>
            <TextView
                android:id="@+id/phone_text"
                android:layout_centerHorizontal="true"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="left"
                android:text="650-555-5555"
                android:textSize="21sp"/>
        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:padding="0dip"
                android:src="@drawable/website"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_toLeftOf="@id/phone_text"/>

            <TextView
                android:id="@+id/web_text"
                android:layout_centerHorizontal="true"
                android:paddingRight="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="left"
                android:text="www.udacity.com"
                android:textSize="21sp"/>
        </TableRow>
    </TableLayout>


</RelativeLayout>